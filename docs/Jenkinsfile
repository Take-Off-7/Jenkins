pipeline {
    agent any

    stages {
        stage('Install Tools') {
            steps {
                sh '''
                  echo "Installing linting tools..."
                  npm install -g htmlhint stylelint eslint
                '''
            }
        }

        stage('Lint Code') {
            steps {
                sh '''
                  echo "Linting HTML, CSS, and JS..."
                  htmlhint docs/*.html || true
                  eslint docs/*.js || true
                  stylelint "docs/*.css" || true
                '''
            }
        }

        stage('Build') {
            steps {
                sh '''
                  echo "Building the app..."
                  # put your build steps here (e.g., minify, bundle)
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                  echo "Running tests..."
                  # run your tests here
                  echo "All tests passed!"
                '''
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                  echo "Deploying to GitHub Pages..."
                  # actual deploy happens through GitHub Pages after push
                '''
            }
        }
    }
}
