pipeline {
    agent any

    stages {
        stage('Install Tools') {
            steps {
                bat '''
                  echo Installing linting tools...
                  npm install -g htmlhint stylelint eslint
                '''
            }
        }

        stage('Lint Code') {
            steps {
                bat '''
                  echo Linting HTML, CSS, and JS...
                  htmlhint docs\\*.html || exit 0
                  eslint docs\\*.js || exit 0
                  stylelint "docs\\*.css" || exit 0
                '''
            }
        }

        stage('Build') {
            steps {
                bat '''
                  echo Building the app...
                  REM put your build steps here (e.g., minify, bundle)
                '''
            }
        }

        stage('Test') {
            steps {
                bat '''
                  echo Running tests...
                  REM run your tests here
                  echo All tests passed!
                '''
            }
        }

        stage('Deploy') {
            steps {
                bat '''
                  echo Deploying to GitHub Pages...
                  REM actual deploy happens through GitHub Pages after push
                '''
            }
        }
    }
}
