pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Fetching latest code from GitHub...'
                checkout scm
            }
        }

        stage('Verify Files') {
            steps {
                bat '''
                    echo Checking required files exist...
                    if not exist docs\\index.html (echo WARNING: Missing index.html) || exit /b 0
                    if not exist docs\\style.css (echo WARNING: Missing style.css) || exit /b 0
                    if not exist docs\\script.js (echo WARNING: Missing script.js) || exit /b 0
                    echo File check complete.
                '''
            }
        }

        stage('Basic Quality Check') {
            steps {
                bat '''
                    echo Performing simple code checks...
                    findstr /C:"console.log" docs\\script.js >nul || echo WARNING: Could not open or no console.log found
                    echo Quality check complete.
                '''
            }
        }

        stage('Build') {
            steps {
                bat '''
                    echo Building application...
                    REM put your build commands here
                    echo Build step complete.
                ''' || exit /b 0
            }
        }

        stage('Test') {
            steps {
                bat '''
                    echo Running tests...
                    REM put your test commands here
                    echo Tests complete.
                ''' || exit /b 0
            }
        }

        stage('Deploy') {
            steps {
                bat '''
                    echo Deploying application...
                    REM put your deploy commands here
                    echo Deployment complete.
                ''' || exit /b 0
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished âœ… (never breaks, warnings only).'
        }
    }
}
