pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Fetching latest code from GitHub...'
                checkout scm
            }
        }

        stage('Verify Files') {
            steps {
                bat '''
                    echo Checking required files exist...
                    if not exist docs\\index.html (echo WARNING: Missing index.html)
                    if not exist docs\\style.css (echo WARNING: Missing style.css)
                    if not exist docs\\script.js (echo WARNING: Missing script.js)
                    echo File check complete.
                '''
            }
        }

        stage('Basic Quality Check') {
            steps {
                script {
                    // run findstr but don't fail pipeline if it errors
                    def status = bat(
                        script: 'findstr /C:"console.log" docs\\script.js >nul',
                        returnStatus: true
                    )
                    if (status != 0) {
                        echo "WARNING: No console.log found in script.js (or file missing)."
                    }
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    def status = bat(script: 'echo Building app...', returnStatus: true)
                    if (status != 0) {
                        echo "WARNING: Build step had an issue but continuing..."
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    def status = bat(script: 'echo Running tests...', returnStatus: true)
                    if (status != 0) {
                        echo "WARNING: Test step had an issue but continuing..."
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    def status = bat(script: 'echo Deploying app...', returnStatus: true)
                    if (status != 0) {
                        echo "WARNING: Deploy step had an issue but continuing..."
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished âœ… (never breaks, warnings only).'
        }
    }
}
